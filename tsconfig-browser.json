{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["es2017", "es7", "es6", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "outDir": "./dist",
        // "outFile": "./dist/lib.js",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "exclude": [
        "./node_modules/",
        "./server.ts",
        "./server.js",
        "./dist",
        "./docs",
        "./*.ts",
        "./test/",
    ]
}
